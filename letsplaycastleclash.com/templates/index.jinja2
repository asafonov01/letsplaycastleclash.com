{% extends 'template.jinja2' %}
{% block content %}
    <main>
        <section class="banner">
            <div class="container">
                <div class="row justify-content-center">

                    <div class="col-xl-8 col-12 position-relative">
                        <div class="main-banner">
                            <img src="../static/src/main-banner.png" alt="" class="w-100">
                        </div>
                        <div class="main-banner-text text-center">
                            {% trans %} Бот по Castle Clash - для тех, <br> кто ценит своё время. {% endtrans %}
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <section class="about-info">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-7 order-1 order-lg-0">
                        <div class="desc">

                                <p>{% trans %}Почувствуйте новый опыт, пользуясь услугами проекта.{% endtrans %}</p>
                                <p>{% trans %}Экономьте время каждый раз, когда участвуете в Событиях Castle Clash, с помощью Telegram-бота.{% endtrans %}</p>
                                <div class="btn-container">
                                    <a href="https://t.me/cc_puzzle_bot" class="btn btn-primary">{% trans %}Попробовать{% endtrans %}</a>
                                </div>

                        </div>

                    </div>
                    <div class="col-xl-3 order-0 order-lg-1 mb-3 mb-xl-0">
                        <img src="../static/src/bg-main-block.svg" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </section>

        <section class="function-block" id="function">
            <div class="container">

                <div class="row">
                    <div class="col-12 position-relative">
                        <div class="img">
                            <img src="../static/src/bg-function.png" alt="" class="img-fluid">
                        </div>
                        <div class="description-wrapper">
                            <div class="title">{% trans %}Удивительные функции{% endtrans %}</div>
                            <div class="desc">
                                {% trans %}почувствуйте скорость выполнения заданий в событиях{% endtrans %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Интуитивно Понятный Интерфейс{% endtrans %}</div>
                                <div class="title-box">{% trans %}Переключайтесь между языками одним нажатием{% endtrans %}</div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Controls.png alt=""> {% trans %}Мультиязычность{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Международный платежный сервис{% endtrans %} <a
                                        href="https://t.me/letsplaycastleclash/3251" style="color: #EA4A4A">@donate</a>,
                                    {% trans %}ЮMoney, Qiwi, банковские карты{% endtrans %}
                                </div>
                                <div class="title-box">{% trans %}Платите удобным способом{% endtrans %}</div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Euro.png alt=""> {% trans %}Оплата{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Загадочный пазл, Возвращение домой{% endtrans %}</div>
                                <div class="title-box">{% trans %}Приобретайте платные функции{% endtrans %}</div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Coin.png alt=""> {% trans %}Валюта CastleCoin{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Данные хранятся в течении двух недель{% endtrans %}
                                </div>
                                <div class="title-box">{% trans %}Мы придерживаемся политики конфиденциальности{% endtrans %}</div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Data.png alt=""> {% trans %}Безопасность{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Стабильный и скоростной бот{% endtrans %}
                                </div>
                                <div class="title-box">{% trans %}Поддерживаем работоспособность бота и его функциями{% endtrans %}</div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Stable.png alt=""> {% trans %}Стабильность{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="item">
                            <div class="border-wrapper">
                                <div class="title-box">{% trans %}Поддержка 24/7, быстрая помощь{% endtrans %}
                                </div>
                                <div class="title-box">{% trans %}Отвечаем на ваши вопросы каждый раз, когда обращаетесь к нам{% endtrans %}
                                </div>
                            </div>
                            <div class="title-primary">
                                <img src=../static/src/Support.png alt=""> {% trans %}Служба поддержки{% endtrans %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        <section class="connection-stat">
            <div class="container">
                <div class="row">

                    <div class="col-xl-6 mb-4">
                        <div class="connection">
                            <div class="title">
                                {% trans %}Присоединяйтесь к нашему сообществу{% endtrans %}
                            </div>
                            <div class="desc">
                                {% trans %}Присоединяясь к нашему сообществу, Вы получите самую свежую информацию с инсайдами и халявой по Castle Clash.{% endtrans %}
